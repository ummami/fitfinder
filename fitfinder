<body>
  <div class="container">
    <div class="header">
      <h1>FITFINDER</h1>
      <p>your ai-powered fashion assistant</p>
    </div>

    <div class="chat-area" id="chatArea">
      <div class="message bot">
        <div class="avatar">FF</div>
        <div class="message-content">
          <p>Hi! I'm FitFinder üëó‚ú®</p>
          <p style="margin-top: 10px;">Try ‚Äúpink skirt‚Äù, ‚Äúblack pants‚Äù, ‚Äúred midi dress‚Äù, ‚Äúwhite top‚Äù. I‚Äôll give you store links.</p>
          <div class="quick-suggestions">
            <div class="suggestion-chip" data-suggestion="black pants">Black pants</div>
            <div class="suggestion-chip" data-suggestion="pink skirt">Pink skirt</div>
            <div class="suggestion-chip" data-suggestion="red dress">Red dress</div>
          </div>
        </div>
      </div>
    </div>

    <div class="input-area">
      <input id="userInput" placeholder="Ask me about fashion..." aria-label="Type your fashion question" />
      <button id="sendBtn">Send</button>
    </div>
  </div>

<script>
  const chatArea = document.getElementById("chatArea");
  const userInput = document.getElementById("userInput");
  const sendBtn = document.getElementById("sendBtn");

  // ‚úÖ flat list of working retailers we can shuffle
  const allRetailers = [
    { name: "Zara", base: "https://www.zara.com/us/en/search?searchTerm=" },
    { name: "ASOS", base: "https://www.asos.com/search/?q=" },
    { name: "Uniqlo", base: "https://www.uniqlo.com/us/en/search?q=" },
    { name: "Target", base: "https://www.target.com/s?searchTerm=" },
    { name: "Urban Outfitters", base: "https://www.urbanoutfitters.com/search?q=" },
    { name: "SSENSE", base: "https://www.ssense.com/en-us/women?q=" },
    { name: "NET-A-PORTER", base: "https://www.net-a-porter.com/en-us/shop/search?searchTerm=" },
    { name: "H&M", base: "https://www2.hm.com/en_us/search-results.html?q=" },
    { name: "Mango", base: "https://shop.mango.com/us/search?q=" }
  ];

  const colors = [
    "black","white","brown","beige","tan","cream","ivory","red","pink",
    "blue","navy","green","yellow","orange","purple","gray"
  ];

  document.addEventListener("DOMContentLoaded", () => {
    sendBtn.addEventListener("click", handleSend);
    userInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") handleSend();
    });

    document.querySelectorAll(".suggestion-chip")?.forEach((chip) => {
      chip.addEventListener("click", () => {
        userInput.value = chip.dataset.suggestion;
        handleSend();
      });
    });
  });

  async function handleSend() {
    const message = userInput.value.trim();
    if (!message) return;
    addMessage(message, "user");
    userInput.value = "";
    sendBtn.disabled = true;
    showTypingIndicator();
    try {
      await simulateFashion(message);
    } finally {
      sendBtn.disabled = false;
    }
  }

  async function simulateFashion(query) {
    // fake delay
    await new Promise((r) => setTimeout(r, 500));
    hideTypingIndicator();

    const lower = query.toLowerCase();
    const color = detectColor(lower);
    const category = detectCategory(lower); // dress, jeans, pants, skirt, top, shirt
    const searchQuery = buildSearchQuery({ query, color, category });

    // shuffle retailers so the 3 we show look random
    const shuffled = shuffle([...allRetailers]).slice(0, 3);

    addBotMessage(`Here are some places to shop for ‚Äú${query}‚Äù:`, shuffled, searchQuery, color);
  }

  function detectColor(text) {
    return colors.find((c) => text.includes(c)) || "";
  }

  function detectCategory(text) {
    if (text.includes("dress")) return "dress";
    if (text.includes("skirt")) return "skirt";
    if (text.includes("jeans")) return "jeans";
    if (text.includes("pants") || text.includes("trousers")) return "pants";
    if (text.includes("shirt")) return "shirt";
    if (text.includes("top") || text.includes("tank")) return "top";
    return ""; // let brand search handle it
  }

  function buildSearchQuery({ query, color, category }) {
    const parts = [];
    if (color) parts.push(color);
    if (category) parts.push(category);
    // last word from original query (helps when user says "maxi skirt")
    const lastWord = query.trim().split(" ").pop();
    if (!category && lastWord) parts.push(lastWord);
    return parts.join(" ").trim();
  }

  // Fisher‚ÄìYates shuffle
  function shuffle(arr) {
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  function addBotMessage(text, shops, searchQuery, color) {
    const messageDiv = document.createElement("div");
    messageDiv.className = "message bot";

    const avatar = document.createElement("div");
    avatar.className = "avatar";
    avatar.textContent = "FF";

    const contentDiv = document.createElement("div");
    contentDiv.className = "message-content";
    contentDiv.innerHTML = `<p>${text}</p>`;

    const linksDiv = document.createElement("div");
    linksDiv.className = "product-links";

    shops.forEach((shop) => {
      const a = document.createElement("a");
      a.className = "product-link";
      a.href = shop.base + encodeURIComponent(searchQuery);
      a.target = "_blank";
      a.rel = "noopener noreferrer";
      a.innerHTML = `
        <div class="product-info">
          <div class="product-name">${searchQuery || "fashion"}</div>
          <div class="product-store">${shop.name}${color ? " ‚Ä¢ " + color : ""}</div>
        </div>
      `;
      linksDiv.appendChild(a);
    });

    contentDiv.appendChild(linksDiv);
    messageDiv.appendChild(avatar);
    messageDiv.appendChild(contentDiv);
    chatArea.appendChild(messageDiv);
    scrollToBottom();
  }

  function addMessage(text, type) {
    const messageDiv = document.createElement("div");
    messageDiv.className = `message ${type}`;
    const avatar = document.createElement("div");
    avatar.className = "avatar";
    avatar.textContent = type === "user" ? "U" : "FF";
    const contentDiv = document.createElement("div");
    contentDiv.className = "message-content";
    contentDiv.textContent = text;
    messageDiv.appendChild(avatar);
    messageDiv.appendChild(contentDiv);
    chatArea.appendChild(messageDiv);
    scrollToBottom();
  }

  function showTypingIndicator() {
    const indicator = document.createElement("div");
    indicator.className = "message bot";
    indicator.id = "typingIndicator";
    indicator.innerHTML = `
      <div class="avatar">FF</div>
      <div class="typing-indicator active">
        <span class="typing-dot"></span>
        <span class="typing-dot"></span>
        <span class="typing-dot"></span>
      </div>
    `;
    chatArea.appendChild(indicator);
    scrollToBottom();
  }

  function hideTypingIndicator() {
    const indicator = document.getElementById("typingIndicator");
    if (indicator) indicator.remove();
  }

  function scrollToBottom() {
    chatArea.scrollTop = chatArea.scrollHeight;
  }
</script>

</body>
</html>

